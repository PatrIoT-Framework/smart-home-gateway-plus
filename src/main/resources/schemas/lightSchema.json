{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {},
  "id": "light-schema",
  "properties": {
    "label": {
      "default": null,
      "description": "the name of the house",
      "id": "/properties/label",
      "title": "The label schema",
      "type": "string"
    },
    "deviceType": {
      "default": "device",
      "description": "Type of the device",
      "id": "/properties/deviceType",
      "title": "The deviceType schema",
      "type": "string"
    },
    "enabled": {
      "default": false,
      "description": "Indicates whether the device is currently enabled and operational.",
      "id": "/properties/enabled",
      "title": "The enabled schema",
      "type": "boolean"
    },
    "status": {
      "default": "Off",
      "enum": [
        "Off",
        "On"
      ],
      "description": "the status of the light (On,Off)",
      "id": "/properties/status",
      "title": "The status schema",
      "type": "string"
    }
  },
  "required": [
    "label",
    "deviceType"
  ],
  "additionalProperties": false
}
